@model UniversityManagementSystem.Models.Course

@{
    ViewBag.Title = "Add Course in";
}

<br/>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-9">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                @Html.ValidationSummary(true)

                <div class="form-group">
                    @Html.LabelFor(model => model.Code, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Code, new { @class = "form-control" })
                        @{
                            if (@ViewBag.CodeError != null)
                            {
                                <span id="fade" style="color: #b94a48">@ViewBag.CodeError</span>

                            }
                        }
                        @Html.ValidationMessageFor(model => model.Code)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                        @{
                            if (@ViewBag.NameError != null)
                            {
                                <span id="fade" style="color: #b94a48">@ViewBag.NameError</span>

                            }
                        }
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Credit, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextBoxFor(model => model.Credit, new { @class = "form-control" })
                        @{
                            if (@ViewBag.CreditError != null)
                            {
                                <span id="fade" style="color: #b94a48">@ViewBag.CreditError</span>

                            }
                        }
                        @Html.ValidationMessageFor(model => model.Credit)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DepartmentId, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        <!-- Html.EditorFor(model => model.DepartmentId) -->
                        @Html.DropDownListFor(model => model.DepartmentId, ViewBag.DeptList as SelectList, "-- Select Department --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DepartmentId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SemesterId, new { @class = "control-label col-md-3" })
                    <div class="col-md-8">
                        <!--Html.EditorFor(model => model.SemesterId)-->
                        @Html.DropDownListFor(model => model.SemesterId, ViewBag.SemList as SelectList, "-- Select Semester --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SemesterId)
                        <br/>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Save Course" class="btn btn-default btn-success" />
                                @{
                                    if (ViewBag.Msg != null)
                                    {
                                        <span id="fade" style="color: green"><font size="4">@ViewBag.Msg</font></span>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>

                
            </div>
                            }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script type="text/javascript">

      $(document).ready( function() {
        $('#fade').delay(7000).fadeOut();
      });
</script>
}


