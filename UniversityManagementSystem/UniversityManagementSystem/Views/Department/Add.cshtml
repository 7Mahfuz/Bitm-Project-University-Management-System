@model UniversityManagementSystem.Models.Department

@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Department</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Code, new { @class = "form-control"  })
                @{
                    if (@ViewBag.CodeError !=null)
                    {
                         <span style="color:red">@ViewBag.CodeError</span>
                
                    }
                    }
                    @Html.ValidationMessageFor(model => model.Code)
                    
                </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @{
    if (@ViewBag.NameError != null)
    {
            <span style="color:red">@ViewBag.NameError</span>

    }
                }
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
                @{
    if (ViewBag.Msg != null)
    {
            <span style="color:green">@ViewBag.Msg</span>
    }
                }
            </div>
        </div>
       
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}


